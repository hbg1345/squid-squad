{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",           // "bundler" → "node"로 변경
    "resolveJsonModule": true,            // OK, node일 때만 사용 가능
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,   // ★ 추가
    "esModuleInterop": true                 // ★ 추가
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
